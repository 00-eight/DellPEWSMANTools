                    }            
                }                    
            ],            
            "SelectorSet" : {
                "Properties" : [
                    "DeviceDescription",
                    "FQDD",
                    "@{l='Slot';e={$_.FQDD.Substring($_.FQDD.LastIndexOf('.')+1)}}",
                    "@{l='DiskCount';e={$fqdd=$_.FQDD;((Get-PEPhysicalDisk -iDracSession $Session).Where({$_.FQDD.Substring($_.FQDD.LastIndexOf(':')+1) -eq $fqdd})).Count}}"
                ],
